<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">

    <changeSet author="Danil" id="2" >
        <createTable tableName="job_types">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="job_type" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Danil" id="3">
        <createTable tableName="rewards">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints primaryKey="true"/>
            </column>
            <column name="employee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="job_type_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="reward_status" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="Danil" id="4">
        <addForeignKeyConstraint baseTableName="rewards"
                                 baseColumnNames="employee_id"
                                 constraintName="fk_rewards_employee_id"
                                 referencedTableName="employees"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet  author="Danil" id="5">
        <addForeignKeyConstraint baseTableName="rewards"
                                 baseColumnNames="job_type_id"
                                 constraintName="fk_rewards_job_type_id"
                                 referencedTableName="job_types"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>